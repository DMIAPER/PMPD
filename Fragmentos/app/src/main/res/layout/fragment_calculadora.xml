<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/etOper1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:autofillHints="@string/btOpe"
        android:ems="10"
        android:hint="@string/etHintOpe1"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etOper2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:autofillHints="@string/etHintOpe2"
        android:ems="10"
        android:hint="@string/etHintOpe2"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOper1" />

    <RadioGroup
        android:id="@+id/rgOperaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOper2">

        <RadioButton
            android:id="@+id/rbSumar"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="@string/btSumar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etOper2" />

        <RadioButton
            android:id="@+id/rbRestar"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="@string/btRestar"
            app:layout_constraintStart_toEndOf="@+id/rbSumar"
            app:layout_constraintTop_toBottomOf="@+id/etOper2" />

        <RadioButton
            android:id="@+id/rbMulti"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:text="@string/btMulti"
            app:layout_constraintStart_toEndOf="@+id/rbRestar"
            app:layout_constraintTop_toBottomOf="@+id/etOper2" />

        <RadioButton
            android:id="@+id/rbDividir"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="@string/btDividir"
            app:layout_constraintStart_toEndOf="@+id/rbMulti"
            app:layout_constraintTop_toBottomOf="@+id/etOper2" />

    </RadioGroup>

    <Button
        android:id="@+id/btOperar"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="@string/btOpe"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgOperaciones" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/tvResult"
        android:textAlignment="center"
        android:textColor="#FF002C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btOperar" />


</androidx.constraintlayout.widget.ConstraintLayout>